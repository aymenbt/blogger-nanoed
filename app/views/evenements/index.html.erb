<%= month_calendar events: @evenements do |date, evenements| %>
  <%= date.day %>

  <% evenements.each do |evenement| %>
    <div>
      
      <%= link_to evenement do %>
      <%= evenement.name %>
      <% end %>
    </div>
  <% end %>
<% end %>




<table>
  <thead>
    <tr>
      <th>Evenement</th>
      <th>Description</th>
      <th>Date et Heure</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evenements.each do |evenement| %>
      <tr>
        <td><%= evenement.name %></td>
        <td><%= truncate evenement.description, length: 60 %>...</td>
        
        <td><%= evenement.start_time %></td>
        <td><%= link_to 'Voir', evenement %></td>
        
      </tr>

    

    <% end %>
  </tbody>
</table>

